---
import '../styles/tokens.css';
import '../styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SchemaScript from '../components/SchemaScript.astro';
import type { SchemaProps } from '../components/SchemaScript.astro';

const { schema } = Astro.props as { schema?: SchemaProps };
const schemaProps = schema ?? {};
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="title" />
    <slot name="description" />
    <slot name="canonical" />
    <slot name="og" />
    <SchemaScript {...schemaProps} />
  </head>
  <body class="min-h-screen">
    <a class="sr-only focus-ring" href="#main">Zum Inhalt springen</a>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
