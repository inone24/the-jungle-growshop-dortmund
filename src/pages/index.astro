---
import meta from '../../content/seo/home.json';
import PageLayout from '../layouts/PageLayout.astro';
---

<PageLayout
  title={meta.title}
  description={meta.description}
  canonical={meta.canonical}
  breadcrumb={[{ name: 'Start', url: meta.canonical }]}
>
  <section class="text-center">
    <h1 class="font-display text-3xl text-text-high sm:text-4xl">
      Growshop Dortmund – ehrlich beraten, sofort verfügbar
    </h1>
    <p class="mt-4 mx-auto max-w-3xl text-text-dim">
      Zelte, LED-Bar-Systeme, EC-Lüfter mit AKF, Dünger &amp; Substrate – plus Smart-Steuerung. Wir
      dimensionieren Leistung, Luftwechsel &amp; VPD mit dir am Tresen.
    </p>
    <div class="mt-6 flex justify-center gap-3">
      <a class="rounded-full bg-accent-moss/10 px-5 py-2 text-accent-primary focus-ring" href="/kontakt/"
        >Beratung &amp; Kauf</a
      >
      <a
        class="rounded-full border border-accent-moss/40 px-5 py-2 text-accent-primary focus-ring"
        href="/standort/"
        >Route starten</a
      >
    </div>
  </section>
</PageLayout>
