---
const { type = "text", name = "input", placeholder = "", value = "" } = Astro.props as { type?:string; name?:string; placeholder?:string; value?:string };
---
<input
  type={type}
  name={name}
  value={value}
  placeholder={placeholder}
  class="flex h-9 w-full rounded-md border border-white/20 bg-transparent px-3 py-1 text-base shadow-sm placeholder:text-white/40 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-white/30 md:text-sm"
/>
