---
import {
  AlertDialogRoot,
  AlertDialogTrigger,
  AlertDialogContent,
  AlertDialogHeader,
  AlertDialogTitle,
  AlertDialogDescription,
  AlertDialogFooter,
  AlertDialogAction,
  AlertDialogCancel,
} from "@/islands/ui/AlertDialog.client";

const {
  trigger = "Ã–ffnen",
  title = "Hinweis",
  description = "",
  actionLabel = "OK",
  cancelLabel = "Abbrechen",
} = Astro.props as Record<string, string>;
---
<noscript>
  <section class="ui-glass rounded-lg p-4">
    <h3 class="text-white font-semibold mb-1">{title}</h3>
    <p class="text-white/80 mb-3">{description}</p>
    <div class="flex gap-2">
      <button class="rounded-md bg-white px-3 py-2 text-black">{actionLabel}</button>
      <button class="rounded-md border border-white/20 px-3 py-2 text-white">{cancelLabel}</button>
    </div>
  </section>
</noscript>
<AlertDialogRoot client:idle>
  <AlertDialogTrigger class="rounded-md border border-white/20 px-3 py-2 text-white hover:bg-white/10">{trigger}</AlertDialogTrigger>
  <AlertDialogContent>
    <AlertDialogHeader>
      <AlertDialogTitle>{title}</AlertDialogTitle>
      <AlertDialogDescription>{description}</AlertDialogDescription>
    </AlertDialogHeader>
    <AlertDialogFooter>
      <AlertDialogCancel>{cancelLabel}</AlertDialogCancel>
      <AlertDialogAction>{actionLabel}</AlertDialogAction>
    </AlertDialogFooter>
  </AlertDialogContent>
</AlertDialogRoot>
