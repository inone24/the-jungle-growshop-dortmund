---
import AccordionIsland from "@/islands/ui/Accordion.client";
const { items = [] } = Astro.props as { items: { value: string; title: string; content: string }[] };
---
<noscript>
  <div class="space-y-2">
    {items.map((item) => (
      <details class="ui-glass rounded-lg">
        <summary class="cursor-pointer px-4 py-3 text-white font-medium">{item.title}</summary>
        <div class="px-4 pb-4 text-white/80">{item.content}</div>
      </details>
    ))}
  </div>
</noscript>
<AccordionIsland client:visible items={items} />
