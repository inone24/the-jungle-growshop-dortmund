---
const { variant = "default", title = "", className = "" } = Astro.props as {
  variant?: "default" | "destructive";
  title?: string;
  className?: string;
};
const variants = variant === "destructive" ? "border-red-500/50 text-red-400" : "border-white/20 text-white";
---
<div role="alert" class={`ui-glass border px-4 py-3 text-sm ${variants} ${className}`}>
  {title && <h5 class="mb-1 font-medium leading-none tracking-tight text-white">{title}</h5>}
  <div class="text-white/80">
    <slot />
  </div>
</div>
